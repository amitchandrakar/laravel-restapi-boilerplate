{
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "printWidth": 120,
    "plugins": ["@prettier/plugin-php"],
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "tabWidth": 4,
                "singleQuote": true,
                "trailingCommaPHP": true
            }
        }
    ]
}
